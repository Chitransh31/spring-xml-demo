<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Keanu Reeves"/>
        <constructor-arg index="1" value="Male"/>
        <constructor-arg index="2" value="40"/>
    </bean>

    <bean name="movieA" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor1"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Leonardo Di Caprio"/>
        <constructor-arg index="1" value="Male"/>
        <constructor-arg index="2" value="40"/>
    </bean>

    <bean name="movieB" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor2"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Scarlett Johansson"/>
        <constructor-arg index="1" value="Female"/>
        <constructor-arg index="2" value="35"/>
    </bean>

    <bean name="movieC" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor3"/>
    </bean>

</beans>